<h5>Available Achievements</h5>
<div id="available-achievements"></div>

<script>
  $(function () {
    $('[data-toggle="tooltip"]').tooltip();
  });

  const achievements = [
    { title: 'Gold: Rank 1 in a live quiz', icon: 'counter_1' },
    { title: 'Silver: Rank 2 in a live quiz', icon: 'counter_2' },
    { title: 'Bronze: Rank 3 in a live quiz', icon: 'counter_3' },
    { title: 'Hat Trick: Rank 1, three live quizzes in a row', icon: 'school' },
    { title: 'Gotta Go Fast: Fastest finish in a live quiz', icon: 'rocket_launch' },
    { title: 'Speed Demon: Top 5 fastest times, five live quizzes in a row', icon: 'sprint' },
    { title: 'Always On Time: Attended every live quiz', icon: 'emoji_people' },
    { title: 'Unstoppable: Rank 1, five live quizzes in a row', icon: 'person_celebrate' },
  ];

  function createAchievementButton(title, icon) {
    return `
      <button
        type="button"
        class="btn btn-secondary mt-1"
        data-toggle="tooltip"
        data-placement="top"
        title="${title}"
      >
        <span class="material-symbols-outlined align-bottom px-2">${icon}</span>
      </button>
    `;
  }

  achievements.forEach(({ title, icon }) => {
    $('#available-achievements').append(createAchievementButton(title, icon));
  });
</script>
