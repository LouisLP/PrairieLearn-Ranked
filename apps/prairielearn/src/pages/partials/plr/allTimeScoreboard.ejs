<head>
  <%- compiled_stylesheet_tag('PLR.css') %>
</head>

<div
  class="tab-pane fade text-white"
  id="nav-all-time-scoreboard"
  role="tabpanel"
  aria-labelledby="nav-all-time-scoreboard-tab"
>
  <div id="all-time-scoreboard" class="table-responsive">
    <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col">Rank</th>
          <th scope="col">Name</th>
          <th scope="col">Displayed Badges</th>
          <th scope="col">Total Score</th>
          <th scope="col">Year</th>
        </tr>
      </thead>
      <tbody>
        <% if (locals.allTimeResults) { %>
          <% for(let i = 0; i < locals.allTimeResults.length; i++) { %>
            <tr>
              <th scope="row"><%= i + 1 %></th>
              <td><%= locals.allTimeResults[i].display_name %></td>
              <td>Add Badges...</td>
              <td><%= locals.allTimeResults[i].points %></td>
              <td><%= (new Date(locals.allTimeResults[i].created_at)).getFullYear() %></td>
            </tr>
          <% } %>
        <% } else { %>
          <tr>
            <td colspan="4">No results found.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
