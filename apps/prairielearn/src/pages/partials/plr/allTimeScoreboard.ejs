<div
  class="tab-pane fade text-white"
  id="nav-all-time-scoreboard"
  role="tabpanel"
  aria-labelledby="nav-all-time-scoreboard-tab"
>
  <div id="all-time-scoreboard" class="table-responsive">
    <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col">Rank</th>
          <th scope="col">Name</th>
          <th scope="col">Achievements</th>
          <th scope="col">Total Score</th>
          <th scope="col">Year</th>
        </tr>
      </thead>
      <tbody>
        <% if (locals.allTimeResults.length > 0) { %>
          <% for(let i = 0; i < locals.allTimeResults.length; i++) { %>
            <tr>
              <!-- RANK -->
              <th scope="row"><%= i + 1 %></th>
              <!-- DISPLAY NAME -->
              <td><%= locals.allTimeResults[i].display_name %></td>
              <!-- ACHIEVEMENTS/BADGES -->
              <td>
                <% if (locals.allTimeResults[i].achievements) { %>
                  <% locals.allTimeResults[i].achievements.forEach((achievement) => { %>
                      <span class="material-symbols-outlined align-bottom"><%= achievement %></span>
                  <% }); %>
              <% } else { %> 
                  <p>No achievements earned.</p>
              <% } %> 
              </td>         
              <!-- TOTAL SCORE -->   
              <td><%= Math.round(locals.allTimeResults[i].points).toLocaleString("en-US") %></td>
              <!-- YEAR -->
              <td><%= (new Date(locals.allTimeResults[i].created_at)).getFullYear() %></td>
            </tr>
          <% } %>
        <% } else { %>
          <tr>
            <td colspan="5">No results found.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
