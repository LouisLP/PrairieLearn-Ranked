<div
  class="tab-pane fade text-white"
  id="nav-seasonal-scoreboard"
  role="tabpanel"
  aria-labelledby="nav-seasonal-scoreboard-tab"
>
  <div id="seasonal-scoreboard" class="table-responsive">
    <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col">Rank</th>
          <th scope="col">Name</th>
          <th scope="col">Achievements</th>
          <th scope="col">Total Score</th>
        </tr>
      </thead>
      <tbody>
        <% if (locals.seasonalResults.length > 0) { %>
          <% for(let i = 0; i < locals.seasonalResults.length; i++) { %>
            <tr>
              <!-- RANK -->
              <th scope="row"><%= i + 1 %></th>
              <!-- DISPLAY NAME -->
              <td><%= locals.seasonalResults[i].display_name %></td>
              <!-- ACHIEVEMENTS/BADGES -->
              <td>
                <% if (locals.seasonalResults[i].achievements) { %>
                    <% locals.seasonalResults[i].achievements.forEach((achievement) => { %>
                        <span class="material-symbols-outlined align-bottom"><%= achievement %></span>
                    <% }); %>
                <% } else { %> 
                    <p>No achievements earned.</p>
                <% } %>                           
              </td>         
              <!-- TOTAL SCORE -->   
              <td><%= locals.seasonalResults[i].points.toLocaleString("en-US") %></td>
            </tr>
          <% } %>
        <% } else { %>
          <tr>
            <td colspan="4">No results found.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
